<p id="notice"><%= notice %></p>

<h1>Friends List</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <%= @friends.each do |friend| %>
        
        <tr>
          <td><%= link_to friend.first_name + ' ' + friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          
          <td><%= link_to 'Add', friend, method: :create, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Edit', friend, method: :update, class: "btn btn-outline-secondary btn-sm" %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
